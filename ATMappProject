 from atm_card import ATMCard

class Customer:
    def __init__(self, id, custPin, custBalance)
        self.id = id
        self.custPin = 1234
        self.custBalance = 10000

    def info(self):
        return self.id

    def get_custPin(self, custPin)
        return custPin

    def get_custBalance(self, custBalance)
        return custBalance

    debet = custBalance - nominal
    simpan = custBalance + nominal

    def (self, debet, nominal):
        self.debet = custBalance - nominal
        print('Saldo uang Anda berkurang: ' + str(self.debet))

    def (self, simpan, nominal)
        self.simpan = custBalance + nominal
        print('Saldo uang Anda bertambah: ') + str(self.simpan)) 
  
